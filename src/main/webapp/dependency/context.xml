<Context>
	<Resource name="jdbc_showcaseDS" auth="Container"
        type="javax.sql.DataSource"
        driverClassName="org.h2.Driver"
        url="jdbc:h2:mem:showcase"
        username="sa" password=""
        maxActive="20" maxIdle="10" maxWait="-1"
        description="Datasource to showcase database"  />

	<ResourceLink name="jdbc/showcaseDS"
    global="jdbc_showcaseDS"
    type="javax.sql.DataSource"/>
</Context>